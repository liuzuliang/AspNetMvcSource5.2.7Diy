
@{
    ViewBag.Title = "Add Quotations";
}
<script src="~/Scripts/plugins/appendGrid/AppendGrid.js"></script>
<h2>Add Quotations</h2>

@using (Html.BeginForm("AddQuotations", "Quotations", null, FormMethod.Post, new { id = "form_saveQuotations" }))
{
    <div class="middleDiv">
        <table id="VendorStatusGrid" style="width:100%;"></table>
    </div>
    <div class="saveDiv">
        <input class="button" type="submit" value="Save" style="width:60px;" />
    </div>
}

<div>
    <script type="text/javascript">
    var myAppendGrid;
    var vendorName = "Vendor";
    var vendorStatus = "Status";
    function validateForm() {
        return true;
    }
    $("#form_saveQuotations").submit(function ()
    {
        if (!validateForm()) {
            return false;
        }
        //alert("validation success.");
        return true;
    });
    $(document).ready(function () {
        myAppendGrid = new AppendGrid({
            element: "VendorStatusGrid",
            //nameFormatter: function(idPrefix, name, uniqueIndex) {
            //    return idPrefix + "[" + (uniqueIndex - 1) + "]" + "." + name;
            //},
            columns: [
                { name: vendorName, display: "Vendor"},
                {
                    name: vendorStatus, display: "Status", type: "select", ctrlOptions:
                    {
                        "S": "Submitted Offer",
                        "D": "Declined To Quotations",
                        "N": "NoResponse"
                    }
                }
            ],
            hideButtons: {
                // Hide the move up and move down button on each row
                insert:true,
                moveUp: true,
                moveDown: true
            }
        });
    });
    </script>
</div>


